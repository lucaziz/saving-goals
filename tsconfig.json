{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "paths": {
      "~*": ["./src/*"],
      "/assets/": ["./src/assets/*"],
      "/styles/": ["./src/styles/*"]
    }
  },
  "include": ["./src/**/*"]
}
